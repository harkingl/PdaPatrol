<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/common_bg_color"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/home_top_bg"/>
        <LinearLayout
            android:id="@+id/home_user_info_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="55dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/home_user_head_iv"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/user_icon_default"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/home_user_name_tv"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    tools:text="你好，李小明"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:text="欢迎使用智慧水务巡检"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/home_install_top_ll"
            android:layout_width="156dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_user_info_ll"
            android:layout_marginTop="34dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/home_install_top_bg_shape"
            android:orientation="horizontal">
            <TextView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="13dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="34dp"
                android:background="@drawable/home_add_bg_shape"
                android:text="+"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="12dp"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="@string/install_inspect_point"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/home_install_bottom_ll"
            android:layout_width="156dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_install_top_ll"
            android:layout_marginLeft="20dp"
            android:background="@drawable/home_install_bottom_bg_shape"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:src="@drawable/ic_worker"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:text="@string/install_inspect_point_tip"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_inspect_point_ll"
            android:layout_width="156dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_alignTop="@+id/home_install_top_ll"
            android:layout_toRightOf="@+id/home_install_top_ll"
            android:background="@drawable/white_bg_shape_12"
            android:paddingLeft="14dp"
            android:paddingVertical="16dp"
            android:paddingRight="24dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_inspect_point"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/text_color_1"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:text="@string/home_inspect_point"/>
                <TextView
                    android:id="@+id/home_inspect_count_tv"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/text_color_4"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    tools:text="已安装52个"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/home_inspect_history_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_inspect_point_ll"
            android:layout_alignLeft="@+id/home_inspect_point_ll"
            android:layout_alignRight="@+id/home_inspect_point_ll"
            android:layout_marginTop="5dp"
            android:background="@drawable/white_bg_shape_12"
            android:paddingLeft="14dp"
            android:paddingVertical="16dp"
            android:paddingRight="24dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_inspect_history"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/text_color_1"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:text="@string/home_inspect_history"/>
                <TextView
                    android:id="@+id/home_history_count_tv"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/text_color_4"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    tools:text="已完成136次"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="@color/text_color_2"
            android:textSize="16sp"
            android:text="待巡检任务"/>
        <TextView
            android:id="@+id/home_task_all_tv"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginRight="30dp"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableRight="@drawable/arrow_right_blue"
            android:drawablePadding="3dp"
            android:textColor="#4B84F1"
            android:textSize="12sp"
            android:text="全部"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.pda.patrol.baseclass.component.NoScrollListView
                android:id="@+id/home_task_lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:listSelector="@color/transparent"
                android:divider="@color/transparent"
                android:dividerHeight="6dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
