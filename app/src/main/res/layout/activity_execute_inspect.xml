<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/common_bg_color"
    android:orientation="vertical">
    <com.pda.patrol.baseclass.component.TitleBarLayout
        android:id="@+id/execute_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/common_bg_color"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="7dp"
                android:paddingLeft="27dp"
                android:paddingRight="37dp"
                android:paddingVertical="24dp"
                android:background="@color/white"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/detail_img_iv"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_rfid_img1"/>
                <TextView
                    android:id="@+id/execute_id_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="14dp"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textColor="@color/text_color_1"
                    android:textSize="18sp"
                    tools:text="巡检点YYbox-00001"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/arrow_right"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/text_color_1"
                android:textSize="16sp"
                android:text="1、巡检点定位"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:background="@drawable/white_bg_shape"
                android:layout_marginHorizontal="20dp"
                android:padding="20dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color_1"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:text="安装网点："/>
                    <TextView
                        android:id="@+id/execute_address_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:lines="1"
                        android:ellipsize="end"
                        android:textColor="@color/text_color_1"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        tools:text="闵行区-春申路-莲花南路交叉口"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/ic_map"
                    android:drawablePadding="3dp"
                    android:textColor="@color/text_color_3"
                    android:textSize="10sp"
                    android:text="点击定位"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:layout_marginLeft="20dp"
                android:gravity="bottom"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_1"
                    android:textSize="16sp"
                    android:text="2、上传巡检照片"/>
                <TextView
                    android:id="@+id/execute_img_count_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginLeft="11dp"
                    android:textColor="@color/text_color_3"
                    android:textSize="10sp"
                    android:text="（最多3张）"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/white_bg_shape"
                android:orientation="vertical">
                <com.pda.patrol.baseclass.component.NoScrollGridView
                    android:id="@+id/execute_imgs_gv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:numColumns="3"
                    android:horizontalSpacing="8dp"
                    android:verticalSpacing="8dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/text_color_1"
                android:textSize="16sp"
                android:text="3、确认巡检结果"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:background="@drawable/white_bg_shape"
                android:layout_marginHorizontal="20dp"
                android:padding="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/text_color_2"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:text="巡检正常"/>
                <CheckBox
                    android:id="@+id/execute_result_normal_cb"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:button="@null"
                    android:background="@drawable/checkbox_selector"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginHorizontal="20dp"
                android:padding="20dp"
                android:background="@drawable/white_bg_shape"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="@color/text_color_2"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:text="巡检异常"/>
                    <CheckBox
                        android:id="@+id/execute_result_abnormal_cb"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:button="@null"
                        android:background="@drawable/checkbox_selector"/>
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/execute_result_abnormal_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color_2"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:text="异常类型"/>
                    <LinearLayout
                        android:id="@+id/execute_select_type_ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="13dp"
                        android:paddingHorizontal="17dp"
                        android:background="@drawable/et_border_gray_shape">
                        <TextView
                            android:id="@+id/execute_abnormal_type_tv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/text_color_4"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:text="选择类型"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/arrow_down"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/text_color_2"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:text="异常处理情况"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <CheckBox
                            android:id="@+id/execute_deal_solved_cb"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="9dp"
                            android:button="@null"
                            android:background="@drawable/checkbox_selector"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/text_color_2"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:text="现场已解决"/>
                        <CheckBox
                            android:id="@+id/execute_deal_unresolved_cb"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="44dp"
                            android:button="@null"
                            android:background="@drawable/checkbox_selector"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/text_color_2"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:text="暂未解决"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="19dp"
                        android:textColor="@color/text_color_2"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:text="异常信息"/>

                    <EditText
                        android:id="@+id/execute_abnormal_info_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/et_border_gray_shape"
                        android:paddingVertical="13dp"
                        android:paddingHorizontal="17dp"
                        android:gravity="start"
                        android:hint="请输入安装相关信息..."
                        android:textColorHint="#999999"
                        android:textColor="@color/text_color_1"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:minLines="3"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingHorizontal="20dp"
        android:paddingVertical="15dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/execute_commit_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingVertical="13dp"
            android:background="@drawable/btn_blue_bg_shape"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:text="提交"/>
    </LinearLayout>
</LinearLayout>
