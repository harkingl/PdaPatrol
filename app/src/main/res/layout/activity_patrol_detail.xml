<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg_color"
    android:orientation="vertical">

    <com.pda.patrol.baseclass.component.TitleBarLayout
        android:id="@+id/detail_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/detail_img_iv"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_rfid_img1"/>
        <TextView
            android:id="@+id/detail_id_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="14dp"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@color/text_color_1"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="巡检点YYbox-00001"/>
    </LinearLayout>
    <TextView
        android:id="@+id/detail_address_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/text_color_1"
        android:textSize="12sp"
        tools:text="安装网点：闵行区-春申路-莲花南路交叉口"/>
    <TextView
        android:id="@+id/detail_type_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/text_color_1"
        android:textSize="12sp"
        android:visibility="gone"
        tools:text="巡检点类型：智能T型"/>

    <RelativeLayout
        android:id="@+id/detail_tobe_executed_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="30dp"
        android:background="@drawable/white_bg_shape"
        android:layout_marginHorizontal="20dp"
        android:padding="20dp"
        android:orientation="horizontal">
        <TextView
                android:id="@+id/detail_tobe_executed_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_1"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="待执行巡检"/>
        <TextView
            android:id="@+id/detail_goto_inspect_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border_blue_shape"
            android:paddingVertical="3dp"
            android:paddingHorizontal="15dp"
            android:layout_alignParentRight="true"
            android:textColor="@color/common_blue_color"
            android:textSize="12sp"
            android:textStyle="bold"
            android:text="去巡检"/>
        <TextView
            android:id="@+id/detail_create_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:layout_below="@+id/detail_tobe_executed_tv"
            android:layout_alignLeft="@+id/detail_tobe_executed_tv"
            android:textColor="@color/text_color_1"
            android:textSize="12sp"
            android:text="创建时间：2023.08.02 10:00"/>
        <TextView
            android:id="@+id/detail_end_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/detail_create_time_tv"
            android:layout_alignLeft="@+id/detail_tobe_executed_tv"
            android:textColor="@color/text_color_1"
            android:textSize="12sp"
            android:text="截止时间：2023.09.03 10:00"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:background="@drawable/white_bg_shape"
        android:layout_marginHorizontal="20dp"
        android:padding="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_1"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="安装信息"/>
        <TextView
            android:id="@+id/detail_installer_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="@color/text_color_1"
            android:textSize="12sp"
            android:text="安装人：李工"/>
        <TextView
            android:id="@+id/detail_install_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/text_color_1"
            android:textSize="12sp"
            android:text="安装时间：2023.09.03 10:00"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:textColor="@color/text_color_1"
            android:textSize="12sp"
            android:text="安装图片"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:src="@drawable/img1"/>
            <ImageView
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginLeft="8dp"
                android:src="@drawable/img2"/>
            <ImageView
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginLeft="8dp"
                android:src="@drawable/img3"/>
        </LinearLayout>

        <TextView
            android:id="@+id/detail_remark_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="@color/text_color_1"
            android:textSize="12sp"
            android:text="备注信息：无"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/detail_inspection_history_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:background="@drawable/white_bg_shape"
        android:layout_marginHorizontal="20dp"
        android:padding="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@color/text_color_1"
            android:textSize="12sp"
            android:textStyle="bold"
            android:text="查看历史巡查任务"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:src="@drawable/arrow_right"/>
    </LinearLayout>
</LinearLayout>
