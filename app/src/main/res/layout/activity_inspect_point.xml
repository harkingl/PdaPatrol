<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg_color"
    android:orientation="vertical">

    <com.pda.patrol.baseclass.component.TitleBarLayout
        android:id="@+id/inspect_point_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingHorizontal="20dp"
        android:paddingTop="16dp">
        <TextView
            android:id="@+id/inspect_point_latest_install_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_sort"
            android:drawablePadding="6dp"
            android:textColor="@color/text_color_1"
            android:textSize="14sp"
            android:text="最新安装"/>
        <View
            android:id="@+id/inspect_point_sort_slider"
            android:layout_width="35dp"
            android:layout_height="3dp"
            android:layout_marginLeft="12dp"
            android:layout_below="@+id/inspect_point_latest_install_tv"
            android:layout_marginTop="14dp"
            android:visibility="invisible"
            android:layout_alignLeft="@+id/inspect_point_latest_install_tv"
            android:background="#4B84F1"/>

        <TextView
            android:id="@+id/inspect_point_screen_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawableRight="@drawable/arrow_down"
            android:drawablePadding="6dp"
            android:gravity="center_vertical"
            android:textColor="@color/text_color_4"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="按安装点筛选"/>
        <View
            android:id="@+id/inspect_point_screen_slider"
            android:layout_width="35dp"
            android:layout_height="3dp"
            android:layout_marginLeft="24dp"
            android:layout_below="@+id/inspect_point_screen_tv"
            android:layout_marginTop="14dp"
            android:visibility="invisible"
            android:layout_alignLeft="@+id/inspect_point_screen_tv"
            android:background="#4B84F1"/>
    </RelativeLayout>

    <com.pda.patrol.baseclass.component.PagedItemListView
        android:id="@+id/inspect_point_list_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="16dp"
        android:divider="@color/transparent"
        android:dividerHeight="12dp"
        android:scrollbars="none"
        android:listSelector="@color/transparent"/>
</LinearLayout>