<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg_color"
    android:orientation="vertical">

    <com.pda.patrol.baseclass.component.TitleBarLayout
        android:id="@+id/detail_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">
                <TextView
                    android:id="@+id/detail_task_state_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="34dp"
                    android:textColor="@color/text_color_1"
                    android:textSize="24sp"
                    android:text="已逾期"/>
                <TextView
                    android:id="@+id/detail_task_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/detail_task_state_tv"
                    android:layout_alignLeft="@+id/detail_task_state_tv"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="20dp"
                    android:textColor="@color/text_color_4"
                    android:textSize="12sp"
                    tools:text="任务时间：2023.09.21-2023.09.30"/>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="16dp"
                android:textColor="@color/text_color_1"
                android:textSize="16sp"
                android:text="巡检设备"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/white_bg_shape"
                android:padding="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/detail_rfid_img_iv"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_rfid_img1"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="11dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/detail_rfid_no_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:ellipsize="end"
                        android:textSize="14sp"
                        android:textColor="@color/text_color_1"
                        android:textStyle="bold"
                        tools:text="RFID 编号. YYbox-00001"/>
                    <TextView
                        android:id="@+id/detail_rfid_type_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:textSize="12sp"
                        android:textColor="@color/text_color_2"
                        tools:text="设备类型：智能BOX"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/detail_rfid_more_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_right"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="30dp"
                android:textColor="@color/text_color_1"
                android:textSize="16sp"
                android:text="任务信息"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="9dp"
                android:background="@drawable/white_bg_shape"
                android:layout_marginHorizontal="20dp"
                android:padding="20dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/detail_inspect_point_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_1"
                    android:textSize="12sp"
                    tools:text="巡检点：1111111"/>
                <TextView
                    android:id="@+id/detail_address_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/text_color_1"
                    android:textSize="12sp"
                    tools:text="安装网点：闵行区-春申路-莲花南路交叉口"/>

                <TextView
                    android:id="@+id/detail_inspector_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/text_color_1"
                    android:textSize="12sp"
                    tools:text="计划巡检人：李工"/>
                <TextView
                    android:id="@+id/detail_task_task_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/text_color_1"
                    android:textSize="12sp"
                    tools:text="任务时间：2023.09.03-2023.09.30"/>
            </LinearLayout>

            <TextView
                android:id="@+id/detail_goto_inspect_tv"
                android:layout_width="173dp"
                android:layout_height="45dp"
                android:layout_marginTop="24dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:background="@drawable/btn_scan_bg_shape"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="重新巡检"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
