<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg_color"
    android:orientation="vertical">

    <com.pda.patrol.baseclass.component.TitleBarLayout
        android:id="@+id/detail_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">
                <TextView
                    android:id="@+id/detail_task_state_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="34dp"
                    android:textColor="@color/text_color_1"
                    android:textSize="24sp"
                    tools:text="任务已完成"/>
                <TextView
                    android:id="@+id/detail_inspect_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/detail_task_state_tv"
                    android:layout_alignLeft="@+id/detail_task_state_tv"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="20dp"
                    android:textColor="@color/text_color_4"
                    android:textSize="12sp"
                    tools:text="巡检时间：2023.09.21 10:00"/>
                <TextView
                    android:id="@+id/detail_inspect_normal_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/detail_task_state_tv"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="27dp"
                    android:textColor="@color/common_green_color"
                    android:textSize="12sp"
                    tools:text="巡检正常"/>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="16dp"
                android:textColor="@color/text_color_1"
                android:textSize="16sp"
                android:text="巡检设备"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/white_bg_shape"
                android:padding="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/detail_rfid_img_iv"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_rfid_img1"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="11dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/detail_rfid_no_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:ellipsize="end"
                        android:textSize="14sp"
                        android:textColor="@color/text_color_1"
                        android:textStyle="bold"
                        tools:text="RFID 编号. YYbox-00001"/>
                    <TextView
                        android:id="@+id/detail_rfid_type_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:textSize="12sp"
                        android:textColor="@color/text_color_2"
                        tools:text="设备类型：智能BOX"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/detail_rfid_more_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_right"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:layout_marginLeft="20dp"
                android:gravity="bottom"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/text_color_1"
                    android:textSize="16sp"
                    android:text="巡检现场照片"/>
                <TextView
                    android:id="@+id/detail_img_count_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginLeft="11dp"
                    android:textColor="@color/text_color_3"
                    android:textSize="10sp"
                    tools:text="共3张"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/white_bg_shape"
                android:orientation="vertical">
                <com.pda.patrol.baseclass.component.NoScrollGridView
                    android:id="@+id/detail_imgs_gv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:visibility="gone"
                    android:numColumns="3"
                    android:horizontalSpacing="8dp"
                    android:verticalSpacing="8dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:layout_marginLeft="30dp"
                android:textColor="@color/text_color_1"
                android:textSize="16sp"
                android:text="任务信息"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="9dp"
                android:background="@drawable/white_bg_shape"
                android:layout_marginHorizontal="20dp"
                android:padding="20dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/detail_create_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_1"
                    android:textSize="12sp"
                    tools:text="创建时间：2023.08.02 10:00"/>
                <TextView
                    android:id="@+id/detail_end_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/text_color_1"
                    android:textSize="12sp"
                    tools:text="截止时间：2023.09.03 10:00"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:background="#D9D9D9" />

                <TextView
                    android:id="@+id/detail_inspector_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/text_color_1"
                    android:textSize="12sp"
                    tools:text="巡检人：李工"/>
                <TextView
                    android:id="@+id/detail_task_inspect_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/text_color_1"
                    android:textSize="12sp"
                    tools:text="巡检时间：2023.09.03 10:00"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:background="#D9D9D9" />

                <TextView
                    android:id="@+id/detail_inspect_result_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/text_color_1"
                    android:textSize="12sp"
                    tools:text="巡检结果：异常"/>
                <TextView
                    android:id="@+id/detail_abnormal_type_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/text_color_1"
                    android:textSize="12sp"
                    android:visibility="gone"
                    tools:text="异常类型：设备破损"/>

                <TextView
                    android:id="@+id/detail_abnormal_info_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/text_color_1"
                    android:textSize="12sp"
                    android:visibility="gone"
                    tools:text="异常信息：设备暂能使用，建议后期更换设备"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
